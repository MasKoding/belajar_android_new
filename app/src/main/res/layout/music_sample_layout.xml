<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1f222b">
    <ImageButton
        android:id="@+id/ibMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_sort_24"
        android:backgroundTint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tvTitleDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/title_discover"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        />
    <ImageButton
        android:id="@+id/ibSetting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_token_24"
        android:backgroundTint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/svMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibMenu"
        android:background="#F3F1F1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        
        />

    <LinearLayout
        android:id="@+id/linearPopular1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/svMusic"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPopularArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivJustin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/justin_bieber"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvJustin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Justin"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/cvPopularArtist"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPopular2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/svMusic"
        android:layout_toRightOf="@id/linearPopular1"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPopularArtist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivRenee"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/renee"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvRenee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renee"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/cvPopularArtist"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearPopular3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/svMusic"
        android:layout_toRightOf="@id/linearPopular2"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPopularArtist3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivHarryStyles"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/harry_styles"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvHarryStyles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harry"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/cvPopularArtist"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPopular4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/svMusic"
        android:layout_toRightOf="@id/linearPopular3"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPopularArtist4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivElizeu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/elizeu"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvElizeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elizeu"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/cvPopularArtist"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvMadeForU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made For U"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/linearPopular1"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMadeForU"
        app:cardCornerRadius="24dp"
        >
        <ImageView
            android:id="@+id/ivRoad"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/road"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tvRoad"
            android:text="Road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#686767"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>