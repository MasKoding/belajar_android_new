<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E7D8"
    tools:context=".ListDoaPilihanActivity">

    <ImageButton
        android:id="@+id/ivBackBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="#716F6F"
        />
    <TextView
        android:id="@+id/tvJudulListDoa"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Doa Doa Harian"
        android:layout_below="@id/ivBackBtn"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#F57C00"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/ivGambarPilihan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/doa_harian2"
        android:layout_toRightOf="@id/tvJudulListDoa"
        android:layout_marginStart="20dp"
        />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPilihanDoa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvJudulListDoa"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            />

</RelativeLayout>